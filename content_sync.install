  // Content Sync Table to use for diff.
  $schema['cs_db_snapshot'] = [
    'description' => 'The base table for configuration data.',
      'fields' => [
      'collection' => [
        'description' => 'Primary Key: Config object collection.',
        'type' => 'varchar_ascii',
        'length' => 255,
        'not null' => TRUE,
        'default' => '',
